<!--vue start  -->
   <script type="text/javascript">
	 var wrapVm= new Vue({
        el : '#app',
        data:{
        	greeting:"hillow VUE2, This is a landing page",
        	templateHtml: ''

        },
        methods: {
            getTemplate: function() {
        	var self = this
              var host = window.location.host;
              var domain = "http://" + host + "/blog";
              fetch(domain + "/html/template.html", {
                  method: "get",
                  headers: {
                    "Content-Type": "file/html",
                  }
                })
                .then(res => res.text())
                .then((res) => {
                  //self.templateHtml = res;
                  //const vnode = render.call(this);
                  console.log(typeof res)
                 console.log( Vue.compile(res))
                })
                .catch(err => console.log(err))
            }
          }
    });
<!--vue end-->

</script>

<script>
function getTemplate() {

	var host= window.location.host;
	var domain= "http://" +host+"/blog";
		fetch(domain+"/html/template.html",{
			method:"get",
			headers: {
			    "Content-Type": "file/html",
			  }
				})
			.then(res=>res.text())
			.then((res)=>{
				var myApp = document.getElementById('myApp')
				myApp.innerHTML= res;

				//$("#myApp").html(res)
			})
			.catch(err => console.log(err))


}
</script>