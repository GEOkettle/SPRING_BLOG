<script>
function getTemplate() {

	var host= window.location.host;
	var domain= "http://" +host+"/blog";
		fetch(domain+"/html/template.html",{
			method:"get",
			headers: {
			    "Content-Type": "file/html",
			  }
				})
			.then(res=>res.text())
			.then((res)=>{
				var myApp = document.getElementById('myApp')
				//myApp.innerHTML= res;
				myApp.append(res)
			})
			.catch(err => console.log(err))


}
</script>